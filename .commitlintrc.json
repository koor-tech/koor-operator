{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "body-max-line-length": [
      1,
      "always",
      150
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "container",
        "docker",
        "docs",
        "feat",
        "fix",
        "gen",
        "helm",
        "olm",
        "operator",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ]
  }
}
